<h2>Animals: </h2>
<table>
  <% for animal in @animals %>
    <tr><td>
      <a href="/animals/<%= animal.id %>">
         ⏤ <%= animal.name %>
      </a>
    </td></tr>
  <% end %>
</table>

<h2>Visitors: </h2>
<table>
  <% for visit in @visits %>
  <tr><td>
       ⏤ <%= visit.visitor %> visited <%= visit.animal.name %>
  </td></tr>
<% end %>
</table>
