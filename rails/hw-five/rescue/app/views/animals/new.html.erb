<div class="section">
<center>
  <h1>create a profile</h1>
<p>
  <% for message in @animal.errors.full_messages %>
  <p><%= message %></p>
  <% end %>
</p>

<%= form_for(@animal)  do |form| %>
  <p>
    <%= form.label(:name) %><br>
    <%= form.text_field(:name) %>
  </p>
  <p>
    <%= form.label(:age) %><br>
    <%= form.text_field(:age) %>
  </p>
  <p>
    <%= form.label(:location) %><br>
    <%= form.text_field(:location) %>
  </p>
  <%= form.submit("create profile") %>
<% end %>
</div>
